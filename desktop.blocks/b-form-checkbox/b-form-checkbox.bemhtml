block b-form-checkbox {
    tag: 'span',
    js: true,
    content: [
        {
            elem: 'field',
            tag: 'input',
            attrs: { type: 'checkbox', name: this.ctx.name, value: this.ctx.value }
        },
        {
            elem: 'bg',
            tag: 'i',
            content: {
                elem: 'tick',
                tag: 'i'
            }
        }
    ]
}